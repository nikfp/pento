<div>
  <.simple_form for={@form} phx-change="validate" phx-submit="save" id={@id}>
    <.input
      field={@form[:gender]}
      type="select"
      label="Gender"
      options={["female", "male", "other", "prefer not to say"]}
    />
    <.input type="select" label="Year of Birth" options={Enum.reverse(1920..2023)} />
    <:actions>
      <.button phx-disable-with="Saving...">
        Save
      </.button>
    </:actions>
  </.simple_form>
</div>
